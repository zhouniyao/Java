		     android:id="@+id/rect2"
		     android:src="@drawable/rect"
			 android:layout_height="wrap_content"
		     android:layout_width="wrap_content"
	     />
		 <ImageButton 
		     android:id="@+id/hat2"
		     android:src="@drawable/hat3"
